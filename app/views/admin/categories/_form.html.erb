<%= form_for([:admin, @category]) do |f| %>
  <%= form_errors @category %>

  <div class="form-group">
    <%= f.text_field :alias, class: 'form-control', placeholder: 'Alias', maxlength: 32 %>
  </div>
  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', placeholder: 'Name', maxlength: 32 %>
  </div>
  <div class="actions">
    <%= f.submit t('scaffold.save'), class: 'btn btn-primary' %>
  </div>
<% end %>
